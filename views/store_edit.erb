<h1><%=@store.store%></h1>

<form action = "/store/<%=@store.id%>" method = "post">
  <label for="store">Update store name:</label>
  <input type = "text" name = "store">
  <button type = "submit">Update <%=@store.store%>
</form>

<form action="/store/<%=@store.id%>" method="post">
  <input type = "hidden" name = "_method" value = "delete">
  <button type = "submit">Permanently close <%=@store.store%></button>
</form>


<% if @store_brands.any? %>
  <p>Available Brands:</p>
  <ul>
    <% @store_brands.each do |brand| %>
      <li><%=brand.brand%></li>
    <%end%>
    </ul>
<% else %>
  <p> New brands coming to your Ekin <%=@store.store%> store, your "lesser-known" shoe outlet!</p>
<% end %>

<form action = "/store/<%=@store.id%>" method = "post">
  <input type="hidden" name="_method" value="patch">
  <label for="brand_id">Add a brand:</label>
  <select name = "brand_id">
    <% @brands.each do |brand| %>
    <option value = "<%=brand.id%>"><%=brand.brand%></option>
    <%end%>
  </select>

  <button type = "submit">Add brand for <%=@store.store%></button>
</form>
